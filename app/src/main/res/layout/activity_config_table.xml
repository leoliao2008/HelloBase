            style="@style/LinearLayoutStyle1">

            <TextView
                android:text="运营商"
                style="@style/TextViewStyle1"/>

            <TextView
                android:id="@+id/main_tv_vendor_name"
                style="@style/TextViewStyle2"/>

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle1">

            <TextView
                android:text="工作频点(MHz)"
                style="@style/TextViewStyle1"/>

            <TextView
                android:id="@+id/main_tv_frq"
                style="@style/TextViewStyle2"/>

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle1">

            <TextView
                android:text="输出功率（微调）"
                style="@style/TextViewStyle1"/>

            <TextView
                android:id="@+id/main_tv_signal_amp"
                style="@style/TextViewStyle2"/>

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle1">

            <TextView
