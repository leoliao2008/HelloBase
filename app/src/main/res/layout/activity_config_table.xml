        <LinearLayout
            style="@style/LinearLayoutStyle1">

            <TextView
                android:text="激励器ID"
                style="@style/TextViewStyle1"/>

            <TextView
                android:id="@+id/main_tv_host_address"
                style="@style/TextViewStyle2"/>

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle1">

            <TextView
                android:text="固件版本"
                style="@style/TextViewStyle1"/>

            <TextView
                android:id="@+id/main_tv_host_version"
                style="@style/TextViewStyle2"/>

        </LinearLayout>

        <LinearLayout
