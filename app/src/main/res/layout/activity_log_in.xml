<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout
    android:id="@+id/activity_log_in_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skycaster.hellobase.activity.LogInActivity"
    android:background="@color/colorBg">
    <ScrollView
        android:layout_width="0dp"
        app:layout_widthPercent="80%"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        app:layout_marginTopPercent="2%"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bds_cd_radio"
                android:scaleType="centerCrop"/>
            <EditText
                android:id="@+id/activity_log_in_edt_ip"
                android:hint="运营商IP"
                android:layout_marginTop="@dimen/dp_20"
                style="@style/EditTextStyle1"/>
            <View
                style="@style/ViewDivider"/>
            <EditText
                android:id="@+id/activity_log_in_edt_port"
                android:hint="端口"
                style="@style/EditTextStyle1"/>
            <View
                style="@style/ViewDivider"/>

            <EditText
                android:id="@+id/activity_log_in_edt_user_name"
                android:hint="用户名"
                style="@style/EditTextStyle1"/>
            <View
                style="@style/ViewDivider"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/activity_log_in_edt_pw"
                    style="@style/EditTextStyle1"
                    android:hint="密码"
                    android:inputType="textPassword"/>
                <ImageView
                    android:id="@+id/activity_log_in_iv_pw_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_visibility_off_grey600_24dp"
                    android:layout_gravity="end|bottom"
                    android:padding="@dimen/dp_5"/>
            </FrameLayout>
            <View
                style="@style/ViewDivider"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/activity_log_in_cbx_keep_input_record"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="记住本次输入"
                android:background="@null"
                android:textColor="@color/colorBlack"/>

            <Button
                android:id="@+id/activity_log_in_btn_log_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登陆"
                android:textSize="@dimen/sp_21"/>

        </LinearLayout>

    </ScrollView>



</android.support.percent.PercentFrameLayout>
