<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_100"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/item_service_base_tv_id"
        android:layout_width="0dp"
        app:layout_widthPercent="20%"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/sp_50"
        android:padding="@dimen/dp_10"
        android:textColor="@color/colorBlack"
        android:layout_centerVertical="true"
        android:text="01"/>

    <LinearLayout
        android:id="@+id/item1"
        android:layout_width="0dp"
        app:layout_widthPercent="80%"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/item_service_base_tv_id">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LDCP码字个数："
            android:layout_margin="@dimen/dp_7"
            />
        <TextView
            android:id="@+id/item_service_base_tv_ldpc_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_margin="@dimen/dp_7"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调制类型："
            android:layout_margin="@dimen/dp_7"
            />
        <TextView
            android:id="@+id/item_service_base_tv_ldpc_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_margin="@dimen/dp_7"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/item1"
        android:id="@+id/item2"
        android:layout_width="0dp"
        app:layout_widthPercent="80%"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/item_service_base_tv_id">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LDCP码率："
            android:layout_margin="@dimen/dp_7"
            />

        <TextView
            android:id="@+id/item_service_base_tv_ldpc_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_7"
            android:layout_weight="1"
            android:text="80%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交织块大小："
            android:layout_margin="@dimen/dp_7"
            />
        <TextView
            android:id="@+id/item_service_base_tv_ldpc_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="100k"
            android:layout_margin="@dimen/dp_7"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/item_service_base_tv_mask_no_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/colorWhite"
        android:text="暂无数据"
        android:textSize="@dimen/sp_18"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        />

</android.support.percent.PercentRelativeLayout>