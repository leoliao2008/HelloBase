<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/item_service_base_tv_mask_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="暂无数据"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_18"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:id="@+id/item_service_base_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp_50"
        android:padding="@dimen/dp_10"
        android:textColor="@color/colorBlack"
        android:layout_centerVertical="true"
        android:text="01"/>

    <LinearLayout
        android:id="@+id/item_service_base_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_service_base_tv_id"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LDCP码字个数："
                android:layout_margin="@dimen/dp_7"
                />
            <TextView
                android:id="@+id/item_service_base_tv_ldpc_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_margin="@dimen/dp_7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="调制类型："
                android:layout_margin="@dimen/dp_7"
                />
            <TextView
                android:id="@+id/item_service_base_tv_ldpc_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_margin="@dimen/dp_7"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LDCP码率："
                android:layout_margin="@dimen/dp_7"
                />

            <TextView
                android:id="@+id/item_service_base_tv_ldpc_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_7"
                android:layout_weight="1"
                android:text="80%"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交织块大小："
                android:layout_margin="@dimen/dp_7"
                />
            <TextView
                android:id="@+id/item_service_base_tv_ldpc_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="100k"
                android:layout_margin="@dimen/dp_7"
                />
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>