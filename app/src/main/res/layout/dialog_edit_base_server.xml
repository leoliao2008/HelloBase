<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:text="修改业务配置清单"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_25"/>

        <TextView
            android:id="@+id/dialog_config_server_base_tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorYellow"
            android:text="00"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_25"/>



    </FrameLayout>


    <LinearLayout
        style="@style/LinearLayoutStyle1">

        <TextView
            android:text="调制类型"
            android:layout_weight="1"
            style="@style/TextViewStyle1"/>

        <EditText
            android:inputType="number"
            android:id="@+id/dialog_config_server_base_edt_qam_type"
            style="@style/EditTextStyle2"/>

    </LinearLayout>
    <LinearLayout
        style="@style/LinearLayoutStyle1">

        <TextView
            android:text="LDCP码字个数"
            style="@style/TextViewStyle1"/>

        <EditText
            android:inputType="number"
            android:id="@+id/dialog_config_server_base_edt_ldcp_num"
            style="@style/EditTextStyle2"/>

    </LinearLayout>
    <LinearLayout
        style="@style/LinearLayoutStyle1">

        <TextView
            android:text="LDCP编码率"
            style="@style/TextViewStyle1"/>

        <EditText
            android:inputType="number"
            android:id="@+id/dialog_config_server_base_edt_ldcp_rate"
            style="@style/EditTextStyle2"/>

    </LinearLayout>
    <LinearLayout
        style="@style/LinearLayoutStyle1">

        <TextView
            android:text="交织块大小"
            style="@style/TextViewStyle1"/>

        <EditText
            android:inputType="number"
            android:id="@+id/dialog_config_server_base_edt_ldcp_size"
            style="@style/EditTextStyle2"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*点击确定后还要在返回页面中点击提交。"
        android:padding="@dimen/dp_7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_config_server_base_btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"/>
        <Button
            android:id="@+id/dialog_config_server_base_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"/>

    </LinearLayout>
</LinearLayout>