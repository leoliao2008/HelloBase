<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skycaster.hellobase.activity.SplashActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_page_bg"
        android:scaleType="centerCrop"/>

    <com.skycaster.hellobase.customize.TwinklingTextView
        android:id="@+id/activity_splash_twnktv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎使用思凯微软件！"
        android:textSize="22sp"
        android:textColor="#000"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        app:layout_marginTopPercent="10%"/>

    <TextView
        android:id="@+id/activity_splash_tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver.1.0.0"
        android:textColor="#fff"
        android:layout_gravity="bottom|center_horizontal"
        app:layout_marginBottomPercent="10%"/>



</android.support.percent.PercentFrameLayout>
