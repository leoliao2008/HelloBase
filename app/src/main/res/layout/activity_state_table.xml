<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:keepScreenOn="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.skycaster.hellobase.activity.StateTableActivity"
    android:background="@color/colorWhite">

    <LinearLayout
        style="@style/LinearLayoutStyle1">
        <TextView
           style="@style/TextViewStyle1"
            android:text="激励器ID"/>
        <TextView
            android:id="@+id/state_tv_mac_address"
            style="@style/TextViewStyle2"/>
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayoutStyle1">
        <TextView
            style="@style/TextViewStyle1"
            android:text="固件版本"/>
        <TextView
            android:id="@+id/state_tv_version"
            style="@style/TextViewStyle2"/>
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayoutStyle1">
        <TextView
            style="@style/TextViewStyle1"
            android:text="当前状态"/>
        <TextView
            android:id="@+id/state_tv_status"
            style="@style/TextViewStyle2"/>
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayoutStyle1">
        <TextView
            style="@style/TextViewStyle1"
            android:text="反馈时间"/>
        <TextView
            android:id="@+id/state_tv_feed_back_time"
            style="@style/TextViewStyle2"/>
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayoutStyle1">
        <TextView
            style="@style/TextViewStyle1"
            android:text="备注"/>
        <TextView
            android:id="@+id/state_tv_comments"
            style="@style/TextViewStyle2"/>
    </LinearLayout>


    <ToggleButton
        android:id="@+id/state_toggle_btn_monitoring"
        android:onClick="startMonitoring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:textOff="实时监控网络状态"
        android:textOn="网络状态监控中..."/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/state_iv_status_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_company_logo_big"
                android:padding="@dimen/dp_7"
                android:layout_margin="@dimen/dp_7"/>
            <TextView
                android:id="@+id/state_tv_status_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_25"
                android:padding="@dimen/dp_7"
                android:text="未开始监控..."/>


        </LinearLayout>

    </RelativeLayout>




</LinearLayout>
