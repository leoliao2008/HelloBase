<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashPageTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginPageTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="TextViewStyle1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_7</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorBg</item>
        <item name="android:layout_marginRight">@dimen/dp_1</item>

    </style>

    <style name="TextViewStyle2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:padding">@dimen/dp_7</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorBg</item>
    </style>


    <style name="LinearLayoutStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp_0.5</item>
    </style>

    <style name="TextViewStyle3">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_21</item>
        <item name="android:padding">@dimen/dp_7</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="EditTextStyle1">
        <item name="android:layout_marginTop">@dimen/dp_25</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_21</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/dp_4</item>
    </style>


    <style name="ViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginTop">@dimen/dp_4</item>
    </style>

    <style name="EditTextStyle2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_selector_grey_to_green</item>
    </style>

</resources>
