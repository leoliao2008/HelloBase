<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.skycaster.hellobase">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashPageTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ConfigTableActivity"
            android:label="配置表"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.StateTableActivity"
            android:label="状态信息"
            android:taskAffinity=".activity.StateTableActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
        </activity>

        <service android:name=".service.ServerConStatusMonitor"/>
        <activity
            android:name=".activity.LogInActivity"
            android:theme="@style/LoginPageTheme"
            android:label="登陆"/>
        <activity android:name=".activity.StateTableListActivity"
            android:label="激励器清单"/>
    </application>

</manifest>